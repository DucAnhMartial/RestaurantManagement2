@model IEnumerable<coderush.Models.CHI_TIET_HOA_DON>

@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            HOA DON
            <small>@Model.FirstOrDefault().MAHOADON</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Views/Dashboard/Dashboardv2.cshtml"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Invoice</li>
        </ol>
    </section>
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Note:</h4>
            IN HOA DON DUOC CHON
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i>HOA DON
                    <small class="pull-right">Date: @Model.FirstOrDefault().HOA_DON.NGAYLAP</small>
                </h2>
            </div>
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>Admin, Inc.</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (804) 123-5432<br>
                    Email: info@almasaeedstudio.com
                </address>
            </div>
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@Model.FirstOrDefault().HOA_DON.DON_DAT.KHACH_HANG.TENKH</strong><br>
                    @Model.FirstOrDefault().HOA_DON.DON_DAT.KHACH_HANG.DIACHI<br>
                    Phone: @Model.FirstOrDefault().HOA_DON.DON_DAT.KHACH_HANG.SDT<br>
                    Email: @Model.FirstOrDefault().HOA_DON.DON_DAT.KHACH_HANG.EMAIL
                </address>
            </div>
            <div class="col-sm-4 invoice-col">
                <b>Invoice @Model.FirstOrDefault().MAHOADON</b><br>
                <br>
                <b>Order ID:</b> @Model.FirstOrDefault().MAHOADON<br>
                <b>Employee:</b> @Model.FirstOrDefault().HOA_DON.NHAN_VIEN.TENNV<br>
                <b>Account:</b> @(Model.FirstOrDefault().GIA * Model.FirstOrDefault().SOLUONG)
            </div>
        </div>
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Qty</th>
                            <th>Product</th>
                            <th>Serial #</th>
                            <th>Description</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hoaDonItem in Model)
                        {
                            <tr>
                                <td>@hoaDonItem.SOLUONG</td>
                                <td>@hoaDonItem.MON.TENMON</td>
                                <td>@hoaDonItem.MON.MAMON</td>
                                <td>@hoaDonItem.MON.THANHPHAN</td>
                                <td>@hoaDonItem.GIA</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <div class="col-xs-6">
        <p class="lead">Amount Due 2/22/2014</p>
        <div class="table-responsive">
            <table class="table">

                <tr>
                    <th>Total:</th>
                    <td>@Model.Sum(item => item.GIA * item.SOLUONG)</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="col-xs-6">
    <p class="lead">Amount Due 2/22/2014</p>
    <div class="table-responsive">
        <table class="table">
        
            <tr>
                <th>Total:</th>
                <td>@Model.Sum(item => item.GIA * item.SOLUONG)</td>
            </tr>
        </table>
    </div>
</div>
<!-- /.row -->
<!-- this row will not appear when printing -->
<div class="row no-print">
    <div class="col-xs-12">
        <a href="@lte.MVC.Pages.ExampleInvoicePrint.Url" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
        <button type="button" class="btn btn-success pull-right">
            <i class="fa fa-credit-card"></i> Submit Payment
        </button>
        <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
            <i class="fa fa-download"></i> Generate PDF
        </button>
    </div>
</div>
    </section>
<!-- /.content -->
<div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->



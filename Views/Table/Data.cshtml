
@{
    ViewData["Title"] = "Data";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var Bans = ViewBag.Bans as IEnumerable<coderush.Models.BAN>;
    var Datbans = ViewBag.DON_DAT as IEnumerable<coderush.Models.DON_DAT>;
    var Khs = ViewBag.KH as IEnumerable<coderush.Models.KHACH_HANG>;
    var chiTietHoaDons = ViewBag.ChiTietHoaDons as IEnumerable<coderush.Models.CHI_TIET_HOA_DON>;
    var NhanViens = ViewBag.NhanViens as IEnumerable<coderush.Models.NHAN_VIEN>;
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            LÊN ĐƠN
            <small>ĐẶT BÀN</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">TINH TRẠNG BÀN</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>SỐ BÀN</th>
                                    <th>TÌNH TRẠNG</th>
                                    <th>HÌNH THỨC</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Bans)
                                {
                                    var donDat = Datbans.FirstOrDefault(d => d.SOBAN == item.SOBAN);
                                    <tr>
                                        <td style="text-align: center;">@item.SOBAN</td>
                                        <td style="text-align: center; color: @(item.TINHTRANG == "Trong" ? "red" : "green")">
                                            @item.TINHTRANG
                                        </td>
                                        <td style="text-align: center; color: @(donDat != null ? "red" : "green")">
                                            @(donDat != null ? donDat.HINHTHUC : "Blank")
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Xoa", "Table", FormMethod.Post))
                                            {
                                                @Html.Hidden("id", item.SOBAN)
                                                <button type="submit" class="btn btn-danger">Xóa</button>
                                            }
                                        </td>
                                    </tr>
                                }




                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>SỐ BÀN</th>
                                    <th>TÌNH TRẠNG</th>
                                    <th>HÌNH THỨC</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">LỊCH SỬ ĐẶT HÀNG</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>TÊN KHÁCH HÀNG</th>
                                    <th>SĐT</th>
                                    <th>NGÀY LẬP</th>
                                    <th>THÀNH TIỀN</th>
                                    <th>NHÂN VIÊN PHỤ TRÁCH</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in chiTietHoaDons)
                                {
                                    var KH = Khs.FirstOrDefault(cthd => cthd.MAKH == item.HOA_DON.DON_DAT.KHACH_HANG.MAKH);
                                    var nhanVien = NhanViens.FirstOrDefault(nv => nv.MANV == item.HOA_DON.MANV);

                                    var hoaDon = item.HOA_DON.NGAYLAP;
                                    var thanhTien = item.SOLUONG * item.GIA;
                                
                                    <tr>
                                        <td class="customer-name" data-toggle="modal" data-target="#customerModal" data-name="@KH.TENKH" data-phone="@KH.SDT" data-address="@KH.DIACHI">@KH.TENKH</td>
                                        <td>@KH.SDT</td>
                                        <td>@hoaDon</td>
                                        <td>@thanhTien</td>
                                        <td class="customer-name" data-toggle="modal" data-target="#customerModal " data-name="@nhanVien.TENNV" data-phone="@nhanVien.SDT" data-address="@nhanVien.QUEQUAN">@nhanVien.TENNV</td>
                                        
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>TÊN KHÁCH HÀNG</th>
                                    <th>SĐT</th>
                                    <th>HÓA ĐƠN</th>
                                    <th>THÀNH TIỀN</th>
                                    <th>NHÂN VIÊN PHỤ TRÁCH</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Modal -->
<div class="modal fade" id="customerModal" tabindex="-1" role="dialog" aria-labelledby="customerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customerModalLabel">Thông tin khách hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Tên:</strong> <span id="customerName"></span></p>
                <p><strong>SĐT:</strong> <span id="customerPhone"></span></p>
                <p><strong>Quê quán:</strong> <span id="customerAddress"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Đoạn mã JavaScript (sử dụng jQuery) -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Xử lý khi modal được hiển thị
        $('#customerModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var customerName = button.data('name');
            var customerPhone = button.data('phone');
            var customerAddress = button.data('address');

            // Hiển thị thông tin chi tiết trong modal
            $('#customerName').text(customerName);
            $('#customerPhone').text(customerPhone);
            $('#customerAddress').text(customerAddress);
        });
    });
</script>



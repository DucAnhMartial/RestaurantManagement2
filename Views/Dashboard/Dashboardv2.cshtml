            var foodIngredients = button.data('ingredients');
            var chefName = button.data('chef');
            var foodImage = button.attr('src');

            // Kiểm tra giá trị của chefName trong Console
            console.log('chefName:', chefName);

            // Hiển thị thông tin chi tiết Món ăn trong modal
            $('#foodModalLabel').text('Thông Tin Món Ăn');
